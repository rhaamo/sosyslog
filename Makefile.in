#

CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

CEFLAGS = @CEFLAGS@
LDEFLAGS = @LDEFLAGS@

EXTRAOBJ = @EXTRAOBJ@

INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@
INSTALL = @INSTALL@

protobjs = modules.o ttymsg.o syslogd.o im_bsd.o im_udp.o im_unix.o \
	   om_classic.o peo/om_peo.o peo/hash.o

objs = $(protobjs) $(EXTRAOBJ)

all: syslogd

.c.o:
	$(CC) $(CFLAGS) $(CEFLAGS) -c $< -o $(.PREFIX).o

syslogd: $(objs)
	$(CC) $(objs) -o syslogd $(LDEFLAGS) $(LIBS) $(LDFLAGS)

.PHONY: install
install:
	$(INSTALL_PROGRAM) syslogd $(bindir)/syslogd

.PHONY: clean distclean
clean:
	-rm -f *.core core $(objs) syslogd

distclean: clean
	-rm -f Makefile config.h config.cache config.status config.log

