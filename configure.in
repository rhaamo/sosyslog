echo
echo "Building ${PROGNAME}-${VERSION} on ${ARCH}"
echo "      Prefix: ${PREFIX}"
echo "          CC: ${CC}"
echo
echo "Build with:"
echo "      Debug: ${END_WITH_DEBUG}"
