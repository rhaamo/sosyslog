CC=		@CC@
CFLAGS=		@CFLAGS@
SCFLAGS=	@SCFLAGS@
LDFLAGS=	@LDFLAGS@
OMMYSQL_LIBS=	@OMMYSQL_LIBS@
OMPEO_EXTRA=	@OMPEO_EXTRA@
STATIC_MODULES=	@STATIC_MODULES@

PROG=		syslogd
SRCS=		modules.c syslogd.c ttymsg.c static_modules.c
#
#Input modules
#
IM_BSD_SRCS=	modules/im_bsd.c
IMLINUX_SRCS=	modules/im_linux.c
IMUDP_SRCS=	modules/im_udp.c
IMUNIX_SRCS=	modules/im_unix.c
IMTCP_SRCS=	modules/im_tcp.c
#
#Output modules
#
OMCLASSIC_SRCS=	modules/om_classic.c
SQL_SRCS=	modules/sql_misc.c
OMMYSQL_SRCS=	modules/om_mysql.c $(SQL_SRCS)
OMPGSQL_SRCS=	modules/om_pgsql.c $(SQL_SRCS)
OMPEO_SRCS=	modules/om_peo.c peo/hash.c $(PEO_EXTRA)
OMREGEX_SRCS=	modules/om_regex.c
STATIC_MODULES_OBJS=	${STATIC_MODULES:=.o}
OBJS=		${SRCS:.c=.o}
OBJS+=		$(STATIC_MODULES_OBJS)

all: $(PROG)

.c.o:
	$(CC) $(CFLAGS) -I. -c $< -o $@

modules.o: config.h

$(PROG): $(OBJS)
	$(SH) static_modules.sh < ../modules.conf
	$(CC) -o $@ $(OBJS) $(LDFLAGS) $(LIBS) modules/*.o

.PHONY: clean distclean
clean:
	-rm -f $(OBJS) $(SOBJS) core *.core $(PROG)

distclean: clean
	-rm -f Makefile config.h static_modules.c static_modules.h

