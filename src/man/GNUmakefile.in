prefix=	@prefix@
MANDIR=	@mandir@
MAN=	im_linux.8 om_peo.8 om_mysql.8 peochk.8 syslogd.8 syslog.conf.5
OMAN=	$(MAN:=.gz)

all:

install maninstall: $(OMAN)

$(OMAN):
	-gzip -cf $(@:%.gz=%) > $(MANDIR)/man$(subst .,,$(suffix $(@:%.gz=%)))/$@

distclean cleandir clean:
	-rm -f GNUmakefile


