CC=		@CC@
LD=		ld
CFLAGS=		@CFLAGS@ -Wall
DCCFLAGS=	@DCCFLAGS@
CPPFLAGS=	-I.. @CPPFLAGS@

INSTALL=	@INSTALL@
INSTALL_LIBDIR=	@prefix@/lib/alat

MLIBNAME=	@MLIBNAME@
MSRCS=		@MSRCS@
MLIBS=		@MLIBS@
MOBJS=		$(MSRCS:.c=.o)
HASH_SRCS_ORI=	@HASH_SRCS@
HASH_SRCS=	$(HASH_SRCS_ORI:%=../peo/%)
HASH_OBJS=	$(HASH_SRCS_ORI:.c=.o)

SHARED_PARAMS=	@SHARED_PARAMS@

$(MSRCS) $(HASH_SRCS): ../config.h

$(HASH_OBJS): $(HASH_SRCS)
	$(CC) $(CFLAGS) $(CPPFLAGS) $(DCCFLAGS) -c $(@:%.o=../peo/%.c) -o $@

$(MOBJS): $(MSRCS)
	$(CC) $(CFLAGS) $(CPPFLAGS) $(DCCFLAGS) -c $(@:.o=.c) -o $@

$(MLIBNAME):  $(MOBJS) $(HASH_OBJS)
	$(LD) $(SHARED_PARAMS) -o $(MLIBNAME) $(MOBJS) $(HASH_OBJS)

all: $(MLIBNAME)

.PHONY:	clean distclean

clean:
	-rm -f core *.core *.o *.so.* *.so

distclean: clean
	-rm -f Makefile *.imp

install:
	@echo "installing shared library..."
	@if [ ! -d "$(INSTALL_LIBDIR)" ]; then echo "creating directory $(INSTALL_LIBDIR)" && mkdir -p -m 755 "$(INSTALL_LIBDIR)" ; fi 
	@$(INSTALL) $(MLIBNAME) $(INSTALL_LIBDIR)/ && echo "$(INSTALL_LIBDIR)/$(MLIBNAME)"

